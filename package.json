{
  "name": "character-planner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@floating-ui/dom": "^1.0.9",
    "normalize.css": "^8.0.0",
    "preact": "^10.11.3"
  },
  "scripts": {
    "start": "parcel serve ./public/index.html --dist-dir .parcel-dev --public-url / --port 3000",
    "build": "tsc && rimraf ./build && parcel build ./public/index.html --public-url . --dist-dir build --reporter @parcel/reporter-bundle-analyzer --log-level verbose",
    "test": "jest --watch",
    "deploy": "rimraf ./docs && copyfiles -u 1 ./build/**/* ./docs",
    "start:prod": "http-server ./docs -p 3010"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@parcel/optimizer-data-url": "^2.8.1",
    "@parcel/reporter-bundle-analyzer": "^2.8.1",
    "@parcel/transformer-inline-string": "^2.8.1",
    "@parcel/validator-typescript": "^2.8.1",
    "@types/jest": "^28.1.7",
    "browserslist": "^4.21.4",
    "copyfiles": "^2.0.0",
    "http-server": "^14.1.1",
    "jest": "^28.1.3",
    "parcel": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 2 firefox version",
      "last 1 safari version",
      "firefox esr"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true
    }
  }
}
