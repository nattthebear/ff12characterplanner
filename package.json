{
  "name": "character-planner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "dz-priority-queue": "^0.1.2",
    "normalize.css": "^8.0.0",
    "preact": "^10.5.15"
  },
  "scripts": {
    "start": "parcel serve ./public/index.html --dist-dir .parcel-dev --public-url / --port 3000",
    "build": "tsc && rimraf ./build && parcel build ./public/index.html --public-url . --dist-dir build --reporter @parcel/reporter-bundle-analyzer --no-scope-hoist",
    "test": "jest --watch",
    "deploy": "rimraf ./docs && copyfiles -u 1 ./build/**/* ./docs"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@parcel/optimizer-css": "^2.2.0",
    "@parcel/reporter-bundle-analyzer": "^2.2.0",
    "@parcel/transformer-css-experimental": "^2.2.0",
    "@parcel/validator-typescript": "^2.2.0",
    "@types/jest": "^27.4.0",
    "browserslist": "^4.19.1",
    "copyfiles": "^2.0.0",
    "jest": "^27.4.7",
    "parcel": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 2 firefox version",
      "last 1 safari version",
      "firefox esr"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true
    }
  }
}
